@model Email 

 
    
 


<div class="content">
    <div class="container">
        <div class="row align-items-stretch no-gutters contact-wrap">
            <div class="col-md-12">
                <div class="form h-100">
                    <h3>Contact</h3>
                    <form  asp-action="Index" class="mb-5" id="contactForm" name="contactForm" novalidate="novalidate">
                        <div class="row">
                            <div class="col-md-12 form-group mb-3">
                                <label for="" class="col-form-label">To</label>
                                <input class="form-control "type="text" asp-for="@Model.To" placeholder="Enter Email here ...."/>

                                <span asp-validation-for="@Model.To" class="alert-danger"></span>

                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 form-group mb-3">
                                <label for="" class="col-form-label">Subject </label>
                                <input class="form-control" type="text" asp-for="@Model.Subject" placeholder="Enter subject here ...."/>
                                <span asp-validation-for="@Model.Subject" class="alert-danger"></span>
                             </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 form-group mb-3">
                                <label for="message" class="col-form-label">Message </label>
                                <textarea class="form-control" asp-for="@Model.Body" cols="30" rows="5" placeholder="Enter Body here....."></textarea>

                                <span asp-validation-for="@Model.Body" class="alert-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 form-group">
                                @*<input type="submit" value="Send Email" class="btn btn-success rounded-2 py-2 px-4">*@

                                <input type="submit" class="btn btn-primary rounded-2 py-2 px-4" value="Send Email" />

                            </div>
                            <span class="submitting">@ViewData["Message"]</span>
                        </div>
                    </form>
                   
                </div>
            </div>
        </div>
    </div>
</div>